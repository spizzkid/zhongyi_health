<script>
	document.addEventListener('DOMContentLoaded', function() {
		const container = document.querySelector('.carousel-container');
		const slides = document.querySelector('.carousel-slides');
		const prevBtn = document.querySelector('.carousel-btn.prev');
		const nextBtn = document.querySelector('.carousel-btn.next');
		const dots = document.querySelectorAll('.carousel-dot');
		const slideCount = document.querySelectorAll('.carousel-slides img').length;
		let currentSlide = 0;

		function updateSlidePosition() {
			slides.style.transform = `translateX(-${currentSlide * 100}%)`;
			// 更新指示器
			dots.forEach((dot, index) => {
				dot.classList.toggle('active', index === currentSlide);
				dot.style.backgroundColor = index === currentSlide ? 'rgba(255, 255, 255, 1)' : 'rgba(255, 255, 255, 0.5)';
			});
		}

		function nextSlide() {
			currentSlide = (currentSlide + 1) % slideCount;
			updateSlidePosition();
		}

		function prevSlide() {
			currentSlide = (currentSlide - 1 + slideCount) % slideCount;
			updateSlidePosition();
		}

		// 添加按钮事件监听器
		prevBtn.addEventListener('click', prevSlide);
		nextBtn.addEventListener('click', nextSlide);

		// 添加指示器点击事件
		dots.forEach((dot, index) => {
			dot.addEventListener('click', () => {
				currentSlide = index;
				updateSlidePosition();
			});
		});

		// 自动播放
		let autoplayInterval = setInterval(nextSlide, 3000);

		// 鼠标悬停时暂停自动播放
		container.addEventListener('mouseenter', () => {
			clearInterval(autoplayInterval);
		});

		// 鼠标离开时恢复自动播放
		container.addEventListener('mouseleave', () => {
			autoplayInterval = setInterval(nextSlide, 3000);
		});

		// 初始化第一个指示器为激活状态
		updateSlidePosition();

		// 环境展示轮播
		const containerEnv = document.querySelector('.carousel-container-env');
		const slidesEnv = document.querySelector('.carousel-slides-env');
		const prevBtnEnv = document.querySelector('.carousel-btn-env.prev');
		const nextBtnEnv = document.querySelector('.carousel-btn-env.next');
		const dotsEnv = document.querySelectorAll('.carousel-dot-env');
		const slideCountEnv = document.querySelectorAll('.carousel-slides-env img').length;
		let currentSlideEnv = 0;

		function updateSlidePositionEnv() {
			slidesEnv.style.transform = `translateX(-${currentSlideEnv * 100}%)`;
			// 更新指示器
			dotsEnv.forEach((dot, index) => {
				dot.classList.toggle('active', index === currentSlideEnv);
				dot.style.backgroundColor = index === currentSlideEnv ? 'rgba(255, 255, 255, 1)' : 'rgba(255, 255, 255, 0.5)';
			});
		}

		function nextSlideEnv() {
			currentSlideEnv = (currentSlideEnv + 1) % slideCountEnv;
			updateSlidePositionEnv();
		}

		function prevSlideEnv() {
			currentSlideEnv = (currentSlideEnv - 1 + slideCountEnv) % slideCountEnv;
			updateSlidePositionEnv();
		}

		// 添加按钮事件监听器
		prevBtnEnv.addEventListener('click', prevSlideEnv);
		nextBtnEnv.addEventListener('click', nextSlideEnv);

		// 添加指示器点击事件
		dotsEnv.forEach((dot, index) => {
			dot.addEventListener('click', () => {
				currentSlideEnv = index;
				updateSlidePositionEnv();
			});
		});

		// 自动播放
		let autoplayIntervalEnv = setInterval(nextSlideEnv, 3000);

		// 鼠标悬停时暂停自动播放
		containerEnv.addEventListener('mouseenter', () => {
			clearInterval(autoplayIntervalEnv);
		});

		// 鼠标离开时恢复自动播放
		containerEnv.addEventListener('mouseleave', () => {
			autoplayIntervalEnv = setInterval(nextSlideEnv, 3000);
		});

		// 初始化第一个指示器为激活状态
		updateSlidePositionEnv();
	});
</script>